<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailTransaksiPembelin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text=" Detail Transaksi Penjualan"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/View1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/nama_barang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:hint="Nama Barang"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_nama_barang"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/ukuran"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:hint="Ukuran"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_ukuran"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/warna"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:hint="Warna"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_warna"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/jumlah_barang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:hint="Jumlah Barang"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_jumlah_barang"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/total_harga"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:hint="Total Harga"
            android:textSize="18dp"
            android:textAlignment="textEnd"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/text_total"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:hint="0"
            android:textSize="18dp"
            android:textAlignment="textEnd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="@color/buttoncolor"
        >
        <TextView
            android:id="@+id/total_semua"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:hint="Total"
            android:textSize="18dp"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:textColorHint="@color/white"
            />
        <TextView
            android:id="@+id/text_total_semua"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:hint="0"
            android:textSize="18dp"
            android:textColorHint="@color/white"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <Button
            android:id="@+id/btn_kirim"
            android:layout_marginTop="20dp"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@color/buttoncolor"
            android:text="Kirim"
            android:textColor="#fff"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>